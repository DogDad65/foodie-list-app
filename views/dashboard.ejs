<%- include('partials/_navbar') %>

<div class="container">
  <h1>Welcome, <%= user.realName || user.username %>!</h1>
  <h2>Your Recipes</h2>
  <a href="/users/<%= user._id %>/recipes/new" class="button">Add New Recipe</a>
  <ul>
    <% recipes.forEach(recipe => { %>
      <li>
        <a href="/users/<%= user._id %>/recipes/<%= recipe._id %>"><%= recipe.title %></a>
        <a href="/users/<%= user._id %>/shopping-list">Shopping List</a>
        <form action="/users/<%= user._id %>/recipes/<%= recipe._id %>?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="button">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</div>

<%- include('partials/_footer') %>
