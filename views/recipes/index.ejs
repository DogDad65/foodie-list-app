<%- include('../partials/_navbar') %>
<link rel="stylesheet" href="/css/styles.css" />

<div class="recipes-container">
  <h1>All Recipes</h1>

  <% if (recipes.length > 0) { %>
    <ul>
      <% recipes.forEach(recipe => { %>
        <li>
          <a href="/recipes/<%= recipe._id %>"><%= recipe.title %></a>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No recipes found.</p>
  <% } %>
</div>

