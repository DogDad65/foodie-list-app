
<%- include('../partials/_navbar') %>
<link rel="stylesheet" href="/css/styles.css">

<!-- views/recipes/show.ejs -->
<h1><%= recipe.title %></h1>

<h3>Ingredients Needed:</h3>
<ul>
  <% recipe.ingredients.forEach(ingredient => { %>
    <li><%= ingredient %></li>
  <% }) %>
</ul>

<h3>Instructions:</h3>
<ol>
  <% recipe.instructions.split('\n').forEach(step => { %>
    <li><%= step %></li>
  <% }) %>
</ol>

