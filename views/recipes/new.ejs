<!-- views/recipes/new.ejs -->
<link rel="stylesheet" href="/css/styles.css">

<h2>Add New Recipe</h2>
<form action="/users/<%= user._id %>/recipes" method="POST">
  <input type="text" name="title" placeholder="Recipe Title" required>
  
  <!-- Input ingredients as a list, each line representing one ingredient -->
  <textarea name="ingredients" rows="10" placeholder="Enter each ingredient on a new line" required></textarea>
  
  <textarea name="instructions" rows="10" placeholder="Instructions" required></textarea>
  <button type="submit">Add Recipe</button>
</form>

  