<!-- views/shopping-list.ejs -->

<link rel="stylesheet" href="/css/styles.css">

<%- include('partials/_navbar') %>

<div class="shopping-list-container">
  <h1>Shopping List</h1>
  <form action="/users/<%= user._id %>/shopping-list/update" method="POST">
    <ul class="shopping-list">
      <% shoppingList.forEach(item => { %> <!-- Loop through shoppingList -->
        <li class="shopping-list-item">
          <input type="checkbox" name="purchased" value="<%= item._id %>">
          <label><%= item.name %></label> <!-- Display the item name -->
        </li>
      <% }) %>
    </ul>
  </form>

  <a href="/auth/dashboard" class="button-link">Back to Dashboard</a>
</div>

<%- include('partials/_footer') %>
