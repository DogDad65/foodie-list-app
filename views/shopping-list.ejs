<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Shopping List</title>

  <!-- Pass the userId to JavaScript -->
  <script>
    const userId = "<%= userId %>";
  </script>
</head>
<body>
  <%- include('partials/_navbar') %>

  <div class="shopping-list-container">
    <h1>Shopping List</h1>
    <ul class="shopping-list">
      <% shoppingList.forEach(item => { %>
        <li class="shopping-list-item" data-id="<%= item._id %>">
          <input
            type="checkbox"
            class="shopping-list-checkbox"
            <%= item.purchased ? "checked" : "" %>
          >
          <label><%= item.name %> (<%= item.quantity %>)</label>
        </li>
      <% }) %>
    </ul>
    <a href="/auth/dashboard" class="button-link">Back to Dashboard</a>
  </div>

  <%- include('partials/_footer') %>

  <!-- Link to your shopping list JavaScript -->
  <script src="/js/shopping-list.js"></script>
</body>
</html>
