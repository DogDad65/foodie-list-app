<%- include('partials/_navbar') %>
<link rel="stylesheet" href="/css/styles.css" />

<div class="admin-dashboard">
  <h1>Admin Dashboard</h1>
  <p>Welcome, <%= user.username %>! Manage your recipes below.</p>

  <!-- Button to create a new recipe -->
  <a href="/recipes/new" class="button-link">Create New Recipe</a>

  <!-- Recipes Table -->
  <div class="recipes-list">
    <% if (recipes.length > 0) { %>
      <% recipes.forEach(recipe => { %>
        <div class="recipe-card">
          <img src="<%= recipe.image || '/images/default-recipe.jpg' %>" alt="<%= recipe.title %>" class="recipe-image" />
          <h3><%= recipe.title %></h3>
          <div class="admin-actions">
            <a href="/recipes/<%= recipe._id %>/edit" class="button-link">Edit</a>
            <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="button-danger">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>No recipes found. Add some recipes to get started!</p>
    <% } %>
  </div>
</div>

<%- include('partials/_footer') %>
